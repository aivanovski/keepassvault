<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ivanovsky.passnotes.presentation.core.viewmodel.MessageCellViewModel" />
    </data>

    <TextView
        android:id="@+id/status"
        style="@style/Material.PrimaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{viewModel.backgroundColor}"
        android:gravity="center"
        android:paddingHorizontal="@dimen/element_margin"
        android:paddingVertical="@dimen/quarter_margin"
        android:text="@{viewModel.text}"
        app:visible="@{viewModel.isVisible}"
        tools:background="@color/light_grey"
        tools:text="@string/status_offline_mode" />

</layout>