<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/notepads_grid_item_horizontal_padding"
		android:paddingRight="@dimen/notepads_grid_item_horizontal_padding"
		android:paddingTop="@dimen/notepads_grid_item_vertical_padding"
		android:paddingBottom="@dimen/notepads_grid_item_vertical_padding">

		<TextView
			android:id="@+id/title"
			style="@style/Notepad.TitleText"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="Title"/>

	</FrameLayout>

</layout>
