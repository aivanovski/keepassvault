<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ivanovsky.passnotes.presentation.syncState.viewmodel.SyncStateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{viewModel.isProgressVisible}" />

        <TextView
            android:id="@+id/message"
            style="@style/Material.PrimaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/element_margin"
            android:layout_marginVertical="@dimen/small_margin"
            android:gravity="center"
            android:text="@{viewModel.message}"
            android:textColor="@{viewModel.messageColor}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonBarrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{viewModel.isMessageVisible}"
            tools:text="Data was successfully updated" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/buttonBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="actionButton,dismissButton" />

        <Button
            android:id="@+id/actionButton"
            style="@style/Material.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/element_margin"
            android:onClick="@{() -> viewModel.onActionButtonClicked() }"
            android:text="@{viewModel.buttonText}"
            android:textColor="@{viewModel.actionButtonTextColor}"
            android:textSize="@dimen/material_primary_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{viewModel.isActionButtonVisible}"
            tools:text="Action"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> viewModel.onDismissButtonClicked() }"
            android:paddingHorizontal="@dimen/element_margin"
            android:paddingVertical="@dimen/quarter_margin"
            android:text="@{viewModel.buttonText}"
            android:textAllCaps="true"
            android:textColor="@color/primary"
            android:textSize="@dimen/material_secondary_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{viewModel.isDismissButtonVisible}"
            tools:text="@string/dismiss" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>