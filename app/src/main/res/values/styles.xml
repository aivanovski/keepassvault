<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<!--<style name="AppTheme.NoActionBar">-->
		<!--<item name="windowActionBar">false</item>-->
		<!--<item name="windowNoTitle">true</item>-->
	<!--</style>-->

	<!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>-->

	<!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>-->

	<style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	</style>

	<!-- Material design styles -->

	<style name="Material">
	</style>

	<style name="Material.ProgressBar" parent="@style/Base.Widget.AppCompat.ProgressBar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Material.Navigation">
	</style>

	<style name="Material.Navigation.HeaderText">
		<item name="android:textColor">@color/primary_text_light</item>
		<item name="android:textSize">@dimen/material_header_text_size</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<!-- TODO: create style according to new material guideline-->
	<style name="Material.ContainedButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
		<item name="android:layout_height">36dp</item>
		<item name="android:textSize">@dimen/material_list_item_primary_text_size</item>
	</style>
	
	<style name="Material.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
	</style>

	<style name="Material.BorderlessButton">
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

	<style name="Material.FloatingActionButton">
		<item name="android:minWidth">@dimen/material_fab_size</item>
		<item name="android:minHeight">@dimen/material_fab_size</item>
		<item name="fabSize">normal</item>
	</style>

	<style name="Material.ExpandedFloatingActionButton"/>
	<style name="Material.ExpandedFloatingActionButton.Item">
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="Material.PrimaryText">
		<item name="android:textSize">@dimen/material_primary_text_size</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="Material.PrimaryText.SingleLine" parent="Material.PrimaryText">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Material.SecondaryText">
		<item name="android:textSize">@dimen/material_secondary_text_size</item>
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="Material.SecondaryText.SingleLine" parent="Material.SecondaryText">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Material.ErrorSecondaryText">
		<item name="android:textSize">@dimen/material_list_item_primary_text_size</item>
		<item name="android:textColor">@color/material_error_secondary_text</item>
	</style>
	
	<style name="Material.ListItem">
	</style>

	<style name="Material.ListItem.PrimaryText">
		<item name="android:textSize">@dimen/material_list_item_primary_text_size</item>
		<item name="android:textColor">@color/material_list_item_primary_text</item>
	</style>

	<style name="Material.ListItem.PrimaryText.SingleLine" parent="Material.ListItem.PrimaryText">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Material.ListItem.SecondaryText">
		<item name="android:textSize">@dimen/material_list_item_secondary_text_size</item>
		<item name="android:textColor">@color/material_list_item_secondary_text</item>
	</style>

	<style name="Material.ListItem.SecondaryText.SingleLine" parent="Material.ListItem.SecondaryText">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Material.EditText">
	</style>

	<style name="Material.EditText.PrimarySingleLine">
		<item name="android:textSize">@dimen/material_edit_text_primary_text_size</item>
		<item name="android:textColor">@color/material_edit_text_primary_text</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Material.EditText.Password">
		<item name="android:textSize">@dimen/material_edit_text_primary_text_size</item>
		<item name="android:textColor">@color/material_edit_text_primary_text</item>
		<item name="android:inputType">textWebPassword</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Groups">
	</style>

	<style name="Groups.TitleText">
		<item name="android:textSize">@dimen/material_primary_text_size</item>
		<item name="android:textColor">@color/primary_text_light</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textStyle">bold</item>
		<item name="android:lines">1</item>
	</style>

	<style name="Groups.NotTitleText">
		<item name="android:textSize">@dimen/material_primary_text_size</item>
		<item name="android:textColor">@color/primary_text</item>
		<item name="android:maxLines">3</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="Groups.CountText">
		<item name="android:textSize">@dimen/material_secondary_text_size</item>
		<item name="android:textColor">@color/primary_text</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
	</style>

</resources>
